<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNavigationViewGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Background Panel Image -->
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="124dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bottom_nav_panel" />

    <!-- Home Button -->
    <ImageButton
        android:id="@+id/imgbtnHome"
        android:layout_width="84dp"
        android:layout_height="64dp"
        android:background="@null"
        android:contentDescription="Redirects to Home"
        app:srcCompat="@drawable/home"
        app:layout_constraintTop_toTopOf="@id/imageView6"
        app:layout_constraintBottom_toBottomOf="@id/imageView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginStart="16dp" />

    <!-- Transactions Button -->
    <ImageButton
        android:id="@+id/imgbtnTransactions"
        android:layout_width="92dp"
        android:layout_height="62dp"
        android:background="@null"
        android:contentDescription="Redirects to Transactions"
        app:srcCompat="@drawable/transactions"
        app:layout_constraintTop_toTopOf="@id/imageView6"
        app:layout_constraintBottom_toBottomOf="@id/imageView6"
        app:layout_constraintStart_toEndOf="@id/imgbtnHome"
        app:layout_constraintEnd_toStartOf="@id/imgbtnCategories"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Categories Button -->
    <ImageButton
        android:id="@+id/imgbtnCategories"
        android:layout_width="91dp"
        android:layout_height="59dp"
        android:background="@null"
        android:contentDescription="Redirects to Categories"
        app:srcCompat="@drawable/categories"
        app:layout_constraintTop_toTopOf="@id/imageView6"
        app:layout_constraintBottom_toBottomOf="@id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
